<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.klinten.buttercheese.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/cache"
        android:layout_marginTop="50dp"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:onClick="setImg"
            android:tag="0"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:onClick="setImg"
            android:tag="1"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:onClick="setImg"
            android:tag="2"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="60dp"
            android:onClick="setImg"
            android:tag="3"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:onClick="setImg"
            android:tag="4"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:onClick="setImg"
            android:tag="5"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            android:onClick="setImg"
            android:tag="6"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:onClick="setImg"
            android:tag="7"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image8"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:onClick="setImg"
            android:tag="8"/>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false"
        android:id="@+id/eindeSpelLayout"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_marginTop="100dp"
        android:visibility="gone">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:text="text"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New game?"
            android:id="@+id/newGame"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:onClick="nieuwSpel" />
    </LinearLayout>

</RelativeLayout>
